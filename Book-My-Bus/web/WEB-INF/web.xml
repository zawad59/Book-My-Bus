<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>available_ticket_check</servlet-name>
        <servlet-class>available_ticket_check</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin_info_insert</servlet-name>
        <servlet-class>admin_info_insert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>book_ticket</servlet-name>
        <servlet-class>book_ticket</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>show_passenger_info</servlet-name>
        <servlet-class>show_passenger_info</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>show_bus_info_admin</servlet-name>
        <servlet-class>show_bus_info_admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin_login</servlet-name>
        <servlet-class>admin_login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>available_ticket_check</servlet-name>
        <url-pattern>/available_ticket_check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin_info_insert</servlet-name>
        <url-pattern>/admin_info_insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>book_ticket</servlet-name>
        <url-pattern>/book_ticket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>show_passenger_info</servlet-name>
        <url-pattern>/show_passenger_info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>show_bus_info_admin</servlet-name>
        <url-pattern>/show_bus_info_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin_login</servlet-name>
        <url-pattern>/admin_login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
